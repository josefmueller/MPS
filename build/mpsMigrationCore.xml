        <fileset file="${artifacts.mpsBootstrapCore}/lib/mps-logging.jar" />
        <fileset file="${artifacts.mpsBootstrapCore}/lib/mps-closures.jar" />
        <fileset file="${artifacts.mpsBootstrapCore}/lib/mps-collections.jar" />
